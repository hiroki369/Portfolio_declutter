<div class ="container">
  <div class ="row">
    <div class ="col-lg-12">
      <h1 class="text-center">User 一覧</h1><br>
        <div class ="col-lg-4">
          <table class="table table-sm table-borderless">
          <tr>
          <td><%= @result %></td>
          </tr>
          <tr>
      　　  　<td>全ユーザー</td><td><%= @users.count %>人</td>
            </tr>
            <tr>
              <td>有効ユーザー</td><td><%= @users_valid.count %>人</td>
            </tr>
            <tr>
              <td>退会済み</td><td><%= @users_deleted.count %>人</td>
            </tr>
          </table>
         </div>
      <table class="table">
        <thead>
          <th>User name</th>
          <th>Status</th>
        </thead>
        <% @users.each do |user|  %>
        <tbody>
                  <tr>
                     <td>
                       <%= link_to admins_users_show_path(user) do  %><%= user.name  %><% end %></td>
                     <td>
                       <% if user.deleted_at.present?  %>
                       退会済みのユーザーです
                   <% else %>
                       有効なユーザーです
                   <% end %>
                   </td>
                  </tr>
              </tbody>
            <% end %>
     </table>
   </div>
   </div>
</div>






