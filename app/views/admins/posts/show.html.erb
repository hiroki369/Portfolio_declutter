  <head>
    <meta charset="utf-8">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" >
  </head>



<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1>Posted by <%= @post.user.name %></h1>
             <%= attachment_image_tag @post, :post_image, :fill, 700, 500, format: "", fallback: "noimage.jpg",class:"rounded" %>
    </div>
        <div class ="col-lg-3 offset-md-2 mt-5">
          <h4>Title</h4>
            <p><%= @post.title %></p>
          <h4>Introduction</h4>
            <p><%= @post.body %></p>
           </span><br>
            <table>
                 <tr>
                 <td>
                  <%=link_to "投稿を編集する", admins_posts_edit_path(@post),class:"btn btn-sm btn-secondary" %></td>
                  <tr>
                    <td>
                        <%=link_to "投稿を削除する", admins_posts_destroy_path(@post), method: :delete, data: { confirm:'本当に削除しますか？'} ,class:"btn btn-sm btn-danger"%>
                    </td>
                 </tr>
                 </td>
                 </tr>
             </table>
        </div>


         <div class="col-lg-12 mt-">
            <h1>Comments</h1>
              <% if @best_answer.present? %>
                 <h1 class="mt-2">Bestanswer</h1>
                   <% if @best_answer.dispose == true %>
                       <h4>思い切って捨てよう！</h4>
                   <% else %>
                     <h4>捨てないで！</h4>
                   <% end %>
                   <h4><%= @best_answer.body %></h4>by
                      <%= attachment_image_tag @best_answer.user, :profile_image, :fill, 40, 40, format: "", fallback: "noimage.jpg",class:"rounded-circle",size:"40x40" %>
                      <%= @best_answer.user.name %>
            <% else %>
                   <% @post.post_comments.each do |post_comment| %>

                    <!--コメント一覧非同期-->
                      <span id="comments_<%= post_comment.id %>">
                        <%= render'layouts/comments',post_comment: post_comment %>
                      </span>
                  <% end %>
                      <span id="comments_blank"></span>

            <% end %>
                <br>
                <br>
                 <h2><%= link_to "back", admins_posts_path %></h2>
          </div>
      </div>
  </div>

