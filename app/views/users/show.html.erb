<div class ="container">
	 <div class = "row">
        <div class ="col-lg-5 offset-md-2">
            <%= notice %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 500,500, format:"", fallback:"noimage.jpg", size:'400x400',class:"rounded-circle" %>
        </div>
            <div class ="col-lg-4">
                <table class ="table table-borderless">
                    <tbody>
                        <tr>
                            <td><%= @user.name %>
                              <% if @user == current_user %>
                                  <%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-sm btn-secondary"  %>
                              <% end %>
                            </td>
                        </tr>
                        <tr>
                            <td><%= @user.introduction %><br></td>
                        </tr>
                        <tr>
                             <td>Posts <%= @user.posts.count  %>件</td>
                        </tr>
                        <tr>
                              <td>Follow<%= link_to user_follow_path(@user) do  %>
                                  <%= @user.followings.count %>人</td>
                        </tr>
                               <% end %>
                        <tr>
                              <td>Follower<%= link_to user_follower_path(@user) do  %><%= @user.followed.count %>人</td>
                        </tr>
                               <% end %>
                          <tr>
                              <td>Best answer<%= @user.best_answer_count%>件</td>
                          </tr>
                          <tr>
                              <td><%= render 'layouts/follow_btn', user: @user  %></td>
                          </tr>
                    </tbody>
                </table>
            </div>

            <div class ="col-lg-12 mt-3" >
                  <h1 class="text text-center"><%= @user.name %>'s posts</h1>
            </div>
                  <div class ="col-lg-12 offset-lg-1">
                      <% @user.posts.each do |post| %>
                        <%= link_to post_path(post) do %>
		                        <%= attachment_image_tag post, :post_image, :fill, 300,300, format:"", fallback:"noimage.jpg", size:'300x300' ,class:"img-fluid", class:"rounded" ,class:"m-2"%>
                 	      <% end %>
                      <% end %>
                  </div>
    </div>
</div>