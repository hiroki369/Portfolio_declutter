<div class ="container" >
  <div class ="row">
    <div class ="col-lg-12 text-center">
      <h1>Bestanswer Ranking</h1>
        <h4>あなたのランキングは<%= User.all.count %>人中<%= current_user.rank %>位です</h4>
        <table class="table table">
          <thead>
            <tr>
              <th>Rank</th>
              <th>Bestanswer 獲得数</th>
              <th>User name</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each.with_index(1) do |user,rank| %>
            <tr>
              <td><%= user.rank  %>位</td>
              <td><%= user.best_answer_count %>件</td>
              <td><%= link_to user_path(user) do  %><%= user.name  %></td>
                  <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div><br>
    <div class="col-lg-12 offset-lg-4" ><%= paginate @users, class: "paginate"%></div>
  </div>
</div>

