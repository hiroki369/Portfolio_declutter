  <head>
    <meta charset="utf-8">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" >
  </head>


<h1>ルート兼、投稿一覧表示画面</h1>

<h1>ランダムに投稿をシャッフルするボタンをつける<h1>

<%= link_to "新規投稿", new_post_path %>

<% @posts.each do |post| %>

<br>
<br>
<br>
<br>

          <%= link_to post_path(post) do  %>
             <%= attachment_image_tag post, :post_image, :fill, 100,100, format:"", fallback:"" %>
          <% end %>
      <table>
        <tr>
          <% if post.best_answerd?(post) %>
          <td>ベストアンサー認定済み
          </td>
          <% else %>
          <tr>
            <td>コメントを投稿してBAを獲得しよう！</td>
          </tr>
          <% end %>
        </tr>
      <tr>
       <td><span class="fa fa-heart" aria-hidden="true" style="color: red;"></span> <%= post.favorites.count  %></td>
       </tr>
       <tr>
       <td><i class="fa fa-comment" ></i> <%= post.post_comments.count %></td>
       </tr>

</tr>
</table>

<% end %>