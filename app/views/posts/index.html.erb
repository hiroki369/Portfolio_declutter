

  <head>
    <meta charset="utf-8">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" >
  </head>

  <div class="container">
    <div class ="row">
      <div class="col-lg-12 text-center"><%= notice %>
        <%= @posts_count%>
        <h1>Posts</h1>
        <% @posts.each do |post| %>
           <div class="col-lg-12 text-center">
             <div class="text-center bg-light">
                <%= post.user.name  %>
                  <%= link_to post_path(post) do  %>
                   <div class="image">
                    <%= attachment_image_tag post, :post_image, :fill, 600,600, format:"", fallback:"noimage.jpg",size:"600x600", class:"rounded" %>
                  </div>
                  <% end %>
                   <table class="table table-borderless table-sm text-center">
                       <tr>
                         <td><%= post.title %></td>
                       </tr>
                       <tr>
                    <% if post.best_answerd?(post) %>
                       <tr>
                         <td>解決済み！</td>
                       </tr>
                    <% else %>
                       <tr>
                        <td>コメントを投稿してBAを獲得しよう！</td>
                       </tr>
                    <% end %>
                     </tr>
                     <tr>
                         <td><span class="fa fa-heart" aria-hidden="true" style="color: red;"></span> <%= post.favorites.count  %>
                            <i class="fa fa-comment" ></i> <%= post.post_comments.count %></td>
                    </tr>
                 </table>
              </div>
            </div>
        <% end %>
    </div>
    <div class="col-lg-6 offset-lg-5">
    <%= paginate @posts, class: "paginate"%></div>
  </div>
</div>

