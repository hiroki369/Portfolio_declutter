  <head>
    <meta charset="utf-8">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" >
  </head>



<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1>Posted by <%= @post.user.name %></h1>
             <%= attachment_image_tag @post, :post_image, :fill, 700, 500, format: "", fallback: "noimage.jpg" %><br>
<h4>Title</h4>
<%= @post.title %>
<h4>Introduction</h4>
<%= @post.body %>

<br>
<!-- いいね機能非同期 -->
<span id="favorite_button_<%= @post.id %>">
          <%= render 'layouts/favorite',post: @post %>
  </span>

<br>
<% if @post.user == current_user %>
    <%=link_to "投稿を編集する", edit_post_path(@post) %><br>
    <%=link_to "投稿を削除する", post_path(@post), method: :delete, data: { confirm:'本当に削除しますか？'} %>
<% end %>
</div>



<div class="col-lg-12 text-center">
  <% if @best_answer.present? %>
    <h1>ベストアンサー！！</h1>
    <% if @best_answer.dispose == true %>
     <h1>思い切って捨てよう！</h1>
    <% else %>
     <h1>捨てないで！</h1>
    <% end %>

    <%= @best_answer.user.name %>
    <%= @best_answer.body %>
<% else %>
    <% @post.post_comments.each do |post_comment| %>

<!--コメント一覧非同期-->
<span id="comments_<%= post_comment.id %>">
  <%= render'layouts/comments',post_comment: post_comment %>
</span>
    <% end %>
<span id="comments_blank"></span>

<% end %>

<!-- コメント投稿フォームも非同期にする -->
<span id="comments_form">
  <%= render'layouts/comments_form',post: @post,post_comment: @post_comment %>
</span>
<br>

<%= link_to "戻る", posts_path %>
